{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=telegram_panel.db"
  },
  "Telegram": {
    "ApiId": 0,
    "ApiHash": "",
    "SessionsPath": "sessions",
    "DefaultDelayMs": 2000,
    "MaxRetries": 3
  },
  "AdminAuth": {
    "Enabled": true,
    "InitialUsername": "admin",
    "InitialPassword": "admin123",
    "CredentialsPath": "admin_auth.json"
  },
  "Hangfire": {
    "DashboardPath": "/hangfire"
  },
  "Serilog": {
    "Enabled": false,
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "RetainedFileCountLimit": 30
  },
  "AllowedHosts": "*"
}
