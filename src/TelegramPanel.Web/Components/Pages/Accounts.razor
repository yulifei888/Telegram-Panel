    private async Task BatchRefreshTelegramStatus()
    {
        var targets = selectedAccounts
            .Where(a => a.Id > 0)
            .GroupBy(a => a.Id)
            .Select(g => g.First())
            .ToList();

        if (targets.Count == 0)
